<div class="container">

<%= form_for @po, :url => { :controller => 'categories', :action => 'postcreate' } do |p| %>
<%= p.collection_select(:category_id, Category.where(prive: true).all, :id, :menuname, class: "form-control") %><br />
<%= p.label :title, "Titel" %><br /> <%= p.text_field :title, class: "form-control" %><br />
<%= p.label :content, "Content - [video:youtubelink] - om youtube video te plaatsen" %><br /> <%= p.text_area :content, class: "form-control"%><br />
<%= p.submit "Activteit toevoegen", class: 'btn btn-primary' %>
<% end %>
</div>