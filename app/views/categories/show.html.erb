<h1><%= @category.submenuname %></h1>
check if logged in moet hier komen<br />
<%= link_to 'Nieuw '+@category.submenuname+ ' bericht tovoegen', catpost_path %>
<% @category.posts.each do |p| %>
  <h2><%= p.title %> </h2>
   Gemaakt op <%= DTformat p.created_at %><br />
  <% video_id = p.content.match('\[video: ?https?:\/\/www.youtube.com\/watch\?v=(?<youtube_id>[^ \] ]+)')  %>
  <% video_tag_link = p.content.match('\[video: ?https?:\/\/www.youtube.com\/watch\?v=?[^ ]+\]')  %>
  <% full_link = '</span></p><embed width="420" height="345" src="http://www.youtube.com/v/' + video_id[:youtube_id]  + '" type="application/x-shockwave-flash" allowfullscreen="true"></embed><p><span> ' %>
  <% if video_tag_link.length > 1 %>
    <% for e in video_tag_link %>
      <% video = p.content.gsub(e, full_link) %>
    <% end %>
    <% else %>
    <% video = p.content.gsub(video_tag_link[0], full_link) %>
  <% end %>
  <%= sanitize video, tags: ['p', 'em', 'u', 'strong', 'embed', 'span'] %>
<% end %> 