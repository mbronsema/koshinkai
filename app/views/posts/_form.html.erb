<div class="container">
	<section id="add_post">
	<%= form_for @post do |p| %>
		<%= p.collection_select(:category_id, Category.all, :id, :menuname, class: "form-control") %><br />
		<%= p.label :title, "Titel" %><br /> <%= p.text_field :title, class: "form-control" %><br />
		<%= p.label :content, "Content" %><br /> <%= p.text_area :content, class: "form-control"%><br />
		<%= p.check_box :prive, {}, "true", "false" %>
		<%= p.label(:prive, "Prive") %><br />
		<% if current_page?('/posts/new') %>
   		<%= p.submit "Artikel/bericht toevoegen", class: 'btn btn-primary' %>
  	<% else %>
    	<%= p.submit "Artikel/bericht wijzigen", class: "btn btn-warning" %>
  	<% end %>
	<% end %>
	</section>
</div>