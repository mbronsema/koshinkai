<h1> <%= @post.title %> </h1>
<% @post.content  %>

Akkoord: <%= @post.approved %><br />
Prive: <%= @post.prive %><br />
Category id<%= @post.category_id %>

<h2>Reacties</h2>
<% @post.comments.each do |c| %>
  <p>
    <strong>Title:</strong>
    <%= c.title %>
  </p>
 
  <p>
    <strong>Bericht:</strong>
    <%= c.message %>
  </p>
<% end %>

<h2>Plaats een reactie:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>