<div class"container">
<h1> <%= @post.title %></h1>
<% @post.content  %>

Akkoord: <%= @post.approved %><br />
Prive: <%= @post.prive %><br />
Category id<%= @post.category_id %>
<% if user_signed_in? %>
<h2>Reacties</h2>
<% @post.comments.each do |c| %>
  <p>
    <strong>Title:</strong>
    <%= c.title %>
  </p>
 
  <p>
    <strong>Bericht:</strong>
    <%= c.message %>
  </p>
<% end %>
<section id="comment_form">
<%= form_for([@post, @post.comments.build]) do |f| %>
  <!--<p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>-->
  <p>
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </p>
  <p>
    <%= f.submit "Plaats reactie", class: "btn btn-primary" %>
  </p>
  <% end %>
<% end %>
</section>
</div>