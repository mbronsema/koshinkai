<div class="row home">
	<div class="col-md-4">
		<div class="panel panel-primary">
		<section id="home-activiteiten">
		<span class="icon-activiteiten"></span>
			<h2>Activiteiten</h2>
			<div class="panel-body">
				<% @events.each do |e| %>
				<%= e.title %><br />
				<%= e.starting_at.strftime('%d-%m-%Y om %H:%M.') %>
				<%= e.ending_at.strftime('%d-%m-%Y om %H:%M.') %><br />
				<%= sanitize e.message, tags: ['p', 'em', 'u', 'strong'] %>
				<% end %>
			</div>
			</section>
		</div>
	</div>
	<div class="col-md-4">
		<div class="panel panel-primary">
			<section id="home-wijzigingen">
			<span class="icon-wijzigingen"></span>
			<h2>Wijzigingen</h2>
			<div class="panel-body">
			<% @eventchanged.each do |e| %>
			<% unless e.updated_at == e.created_at %>
				<%= e.title %><br />
				<%= e.starting_at.strftime('%d-%m-%Y om %H:%M.') %>
				<%= e.ending_at.strftime('%d-%m-%Y om %H:%M.') %><br />
				<%= sanitize e.message, tags: ['p', 'em', 'u', 'strong'] %>
				<% end %>
				<% end %>
			</div>
			</section>
		</div>
	</div>
	<div class="col-md-4">
		<div class="panel panel-primary">
		<section id="home-lesrooster">
		<span class="icon-lesrooster"></span>
			<h2>Lesrooster</h2>
			<div class="panel-body">
				<p>
				<% @scheduleevents.each do |e| %>
				<%= e.title %>
				<%= e.starting_at.strftime('%d-%m-%Y om %H:%M.') %>
				<%= e.ending_at.strftime('%d-%m-%Y om %H:%M.') %><br />
				<% end %>
				</p>
			</div>
		</section>
		</div>
	</div>
</div>