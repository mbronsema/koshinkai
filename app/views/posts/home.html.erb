<div class="row home">
	<div class="col-md-4">
		<div class="panel panel-primary">
		<section id="home-news">
			<span class="icon-nieuws"></span>
			<div class="panel-body">
				<article>
					<% if @news %>
					<h3><%= @news.title %></h3>
					<div class="date">Gemaakt op <%= @news.created_at.strftime('%d-%m-%Y') %></div>
					<div class="post-body"><%= raw Shortcode.process(@news.content) %></div>
					<% else %> 
						<p>Er zijn nog geen nieuwsberichten</p>
					<% end %>
				</article>
			</div>
		</section>
		<div class="panel-bar animated">
			<%= link_to("Lees meer nieuws", "./nieuws")%>
		</div>
		</div>
	</div>
	<div class="col-md-4">
		<div class="panel panel-primary">
		<section id="home-info">
			<span class="icon-info"></span>
			<div class="panel-body">
				<article>
					<% if @info %>
					<h3><%= @info.title %></h3>
					<div class="post-body"><%= raw Shortcode.process(@info.content) %></div>
					<% else %> 
						<p>Info check anders foutmelding als er info is dan werkt dit gewoon goed nu nog niet</p>
					<% end %>
				</article>
			</div>
		</section>
		</div>
	</div>
	<div class="col-md-4">
		<div class="panel panel-primary">
		<section id="home-location">
		<span class="icon-locatie"></span>
			<div class="panel-body">
				<article>
					<% if @location %>
					<h3><%= @location.title %></h3>
					<div class="post-body"><%= raw Shortcode.process(@location.content) %></div>
					<% else %> 
						<p>Locatie check anders foutmelding wanneer de locatie data er is dan werkt dit gewoon goed nu nog niet</p>
					<% end %>
				</article>
			</div>
			</section>
		</div>
	</div>
</div>
<div class="row home">
	<div class="col-md-4">
		<div class="panel panel-primary">
		<section id="home-activiteiten">
		<span class="icon-activiteiten"></span>
			<div class="panel-body">
				<% @events.each do |e| %>
				<%= e.title %><br />
				<%= e.starting_at.strftime('%d-%m-%Y om %H:%M.') %>
				<%= e.ending_at.strftime('%d-%m-%Y om %H:%M.') %><br />
				<%= sanitize e.message, tags: ['p', 'em', 'u', 'strong'] %>
				<% end %>
			</div>
			</section>
		</div>
	</div>
	<div class="col-md-4">
		<div class="panel panel-primary">
			<section id="home-wijzigingen">
			<span class="icon-wijzigingen"></span>
			<div class="panel-body">
				<% unless @eventschanged.length == 0 %>
			<% @eventschanged.each do |ec| %>
				<%= ec.title %><br />
				<%= ec.starting_at.strftime('%d-%m-%Y om %H:%M.') %>
				<%= ec.ending_at.strftime('%d-%m-%Y om %H:%M.') %><br />
				<%= sanitize ec.message, tags: ['p', 'em', 'u', 'strong'] %>
				<% end %>
				<% else %> 
					<p>Er zijn momenteel geen wijzigingen</p>
				<% end %>
			</div>
			</section>
		</div>
	</div>
	<div class="col-md-4">
		<div class="panel panel-primary">
		<section id="home-lesrooster">
		<span class="icon-lesrooster"></span>
			<h2>Lesrooster</h2>
			<div class="panel-body">
				<p>
				<% @scheduleevents.each do |e| %>
				<%= e.title %>
				<%= e.starting_at.strftime('%d-%m-%Y om %H:%M.') %>
				<%= e.ending_at.strftime('%d-%m-%Y om %H:%M.') %><br />
				<% end %>
				</p>
			</div>
		</section>
		</div>
	</div>
</div>