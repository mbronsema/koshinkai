<div class="row home">
	<div class="col-md-4">
		<div class="panel panel-primary">
		<section id="home-news">
			<span class="icon-nieuws"></span>
			<h2>Nieuws</h2>
			<div class="panel-body">
					<article>
						<% if @post %>
						<h3><%= @post.title %></h3>
						<div class="date">Gemaakt op <%= @post.created_at.strftime('%d-%m-%Y') %></div>
						<div class="post-body"><%= raw Shortcode.process(@post.content) %></div>
						<% else %> 
							<p>Er zijn nog geen nieuwsberichten</p>
						<% end %>
					</article>

			</div>
		</section>
		<div class="panel-bar animated">
			<%= link_to("Lees meer nieuws", "./nieuws")%>
		</div>
		</div>
	</div>
