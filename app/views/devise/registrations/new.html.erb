

<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:multipart => true}, :class => "dropzone" ) do |f| %>
<%= devise_error_messages! %>

<div>
<%= f.label :email %><br />
<%= f.text_field :email %>
</div>

<div>
<%= f.label :avatar do %>
<%= f.label :avatar %><br />
<%= f.file_field :avatar, :class => "dropzone" %>
<%= f.hidden_field :avatar_cache %>
<% end %>
</div>

<div><%= f.label :password %><br />
<%= f.password_field :password %></div>

<div><%= f.label :password_confirmation %><br />
<%= f.password_field :password_confirmation %></div>

<%= f.label :invite_code %>
<%= f.password_field :invite_code %>

<div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>









