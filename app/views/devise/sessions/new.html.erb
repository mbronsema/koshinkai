<h2>Aanmelden</h2>
<div class="container">
<%= 
form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="row">
		<div class="col-lg-6">
	 		<div class="form-group">
	  			<%= f.label :email, class: "col-lg-3 control-label" %>
	 			<%= f.email_field :email, autofocus: true, class: "col-lg-3 form-control" %><br/>
	  		</div>
	  		<div class="form-group">
	  			<%= f.label :password, class: "col-lg-3 control-label left" %>
	  			<%= f.password_field :password, autocomplete: "off", class: "col-lg-3 form-control" %>
	  		</div>
		</div>
	</div>
 	<div class="form-group">
  	<% if devise_mapping.rememberable? -%>
    	<div class="col-lg-12"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  	<% end %>
	</div>
  	<div class="form-group">
  		<%= f.submit "Sign in", class: "btn btn-primary" %>
  	</div>
<% end %>
</div>

<%= render "devise/shared/links" %>
