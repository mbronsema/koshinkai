<!DOCTYPE html>
<html>
<head>
  <title>Koshinkai</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
<%= link_to('logout', destroy_user_session_path, :method => :delete) %>

<div class="container"><% if user_signed_in? %>
	<%= link_to('logout', destroy_user_session_path, :method => :delete) %>
	<%= image_tag(current_user.avatar_url) if current_user.avatar? %>


	<% end %>
	
<div class="row">
 <header style="height: 550px; width:100%">
  <div style="height: 500px;display: block;">
  <iframe width="100" height="55" src="//www.youtube.com/embed/mU7tXqYplA8?t=5s&autoplay=1&controls=0&showinfo=0&autohide=1&iv_load_policy=3" frameborder="0" allowfullscreen></iframe>
  </div>
</div>
<!-- Nieuwe menu -->
<ul class="nav nav-pills">
  <% @mainmenu.each do |key, value| %>
    <li class="dropdown">
      <% if value == '#' %>
      <%= link_to key, value, class: 'dropdown-toggle', 'data-toggle' => 'dropdown' %> 
    <% else %>
      <%= link_to key, value, class: 'dropdown-toggle'%> 
    <% end %>
        <% if @menu.length > 0 %>
        <ul class="dropdown-menu">
          <% @menu.each do |menu| %>
            <%if key == menu.menuname %>
            <li><%= link_to menu.submenuname, "/#{menu.menuname}/#{menu.submenuname}" %></li>
            <% end %>
          <% end %>
        </ul>
        <% end %>

    </li>
  <% end %>
</ul>
<%= link_to 'Nieuwe subcategorie maken', new_category_path %>
<%= yield %>
</div>
</body>
</html>