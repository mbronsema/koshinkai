<!DOCTYPE html>
<html>
<head>
  <title>Koshinkai</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
<!-- Nieuwe menu -->
<ul class="nav nav-pills">
  <% @mainmenu.each do |key, value| %>
    <li class="dropdown">
      <% if value == '#' %>
      <%= link_to key, value, class: 'dropdown-toggle', 'data-toggle' => 'dropdown' %> 
    <% else %>
      <%= link_to key, value, class: 'dropdown-toggle'%> 
    <% end %>
        <% if @menu.length > 0 %>
        <ul class="dropdown-menu">
          <% @menu.each do |menu| %>
            <%if key == menu.menuname %>
            <li><%= link_to menu.submenuname, "/#{menu.menuname}/#{menu.submenuname}" %></li>
            <% end %>
          <% end %>
        </ul>
        <% end %>

    </li>
  <% end %>
</ul>
<%= link_to 'Nieuwe subcategorie maken', new_category_path %>
<%= yield %>
</div>
</body>
</html>