<!DOCTYPE html>
<html>
<head>
  <title>Koshinkai</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<ul class="nav nav-pills">
  <% @d.each do |b, c| %>
    <li class="dropdown ">    
    	<a href="<%= c %>" class="dropdown-toggle" data-toggle="dropdown"><%= b %></a>
      	<% @menu.each do |menu| %>
        	<% if b == menu.menuname %>
        	<ul class="dropdown-menu">
        		<li><%= link_to menu.submenuname, "/#{menu.menuname}/#{menu.submenuname}" %></li>
        	</ul>
        	<% end %>
      	<% end %>
    </li>
  <% end %>
</ul>
<%= yield %>
</body>
</html>
