  <nav class="menu">
  <div class="container">
  <ul>
  <% @mainmenu.each do |key, value| %>
    <li class="dropdown">
      <% if value == '#' %>
      <%= link_to key, value, class: 'dropdown-toggle', 'data-toggle' => 'dropdown' %>
    <% else %>
    
        
      <%= link_to key, value, class: "dropdown-toggle", class: current(value) %>
    <% end %>
        <% if @menu.length > 1 %>
        <ul class="dropdown-menu">
          <% @menu.each do |menu| %>
            <%if key == menu.menuname %>
            <li class="<%= current(submenu_path(menu.menuname, menu.submenuname))%>" ><%= link_to menu.submenuname, submenu_path(menu.menuname, menu.submenuname) %></li>
            <% end %>
          <% end %>
        </ul>
        <% end %>

    </li>
  <% end %>
  </ul>
    <%= form_tag(search_path, method: 'get') do %>
  <div class="right-inner-addon">
    <i class="glyphicon glyphicon-search"></i>
    <%= text_field_tag(:search, params[:search], :placeholder => "Zoeken...", :class => "form-control") %>
    </div>
    <%= submit_tag('Zoeken', name: nil, type: 'hidden') %>
  <% end %>
  </div>
  <span class="colorbar"></span>
  </nav>