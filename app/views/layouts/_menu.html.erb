  <nav class="menu">
    <div class="container">
      <ul>
        <li class="dropdown <%= current(root_path) %>"> 
          <%= link_to "Home", root_path, class: 'dropdown-toggle' %>
        </li>
      <% @menu.each do |m| %>
        <% if m.prive == nil %>
          <% if m.parent_id == nil %>
            <li class="dropdown <%= current("/#{m.menuname}") %>">
            <%= link_to languageswitch(m.menuname.capitalize), m.menuname, class: 'dropdown-toggle' %><ul>
            <% @menu.each do |d| %>
              <% if d.parent_id == m.id %>
                <li class="<%= current(submenu_path(m.menuname, d.menuname))%>"><%= link_to d.menuname.capitalize, submenu_path(m.menuname, d.menuname) %></li>
              <% end %>
            <% end %>
            </ul></li>
          <% end %>
        <% end %>
      <% end %>
      </ul>
      <%= form_tag(search_path, method: 'get') do %>
        <div class="right-inner-addon">
          <i class="glyphicon glyphicon-search"></i>
          <%= text_field_tag(:search, params[:search], :placeholder => "Zoeken...", :class => "form-control") %>
        </div>
        <%= submit_tag('Zoeken', name: nil, type: 'hidden') %>
    <% end %>
    </div>
    <span class="colorbar"></span>
  </nav>